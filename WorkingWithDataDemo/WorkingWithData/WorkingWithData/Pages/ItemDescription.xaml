<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkingWithData.Pages.ItemDescription">
    <ContentPage.Content>
        <StackLayout x:Name="ItemStack"
                     VerticalOptions="Center"
                     HorizontalOptions="Center">
            <Button Clicked="GoBack" Text="&lt;="/>
            <Entry x:Name="ItemNameEntry" WidthRequest="350"></Entry>
            <Entry x:Name="ItemDescriptionEntry" WidthRequest="350"></Entry>
            <Label x:Name="ItemQty" ></Label>
            <Stepper x:Name="ItemQtyStepper"></Stepper>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>